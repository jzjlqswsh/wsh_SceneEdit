<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009">

    <fx:Metadata>
    <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
    ]]>
    </fx:Metadata> 
    
    <fx:Script fb:purpose="styling">
        /* Define the skin elements that should not be colorized. 
           For scroll bar buttons, the graphics are colorized but the arrow is not. */
        static private const exclusions:Array = ["arrow"];

        /**
         * @private
         */  
        override public function get colorizeExclusions():Array {return exclusions;}
        
        /* Define the symbol fill items that should be colored by the "symbolColor" style. */
        static private const symbols:Array = ["arrowFill"];

        /**
         * @private
         */
        override public function get symbolItems():Array {return symbols};
        
        /**
         * @private
         */
        override protected function initializationComplete():void
        {
            useChromeColor = true;
            super.initializationComplete();
        }
    </fx:Script>
    
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>

    <!-- border/background -->
    <s:Rect left="0" right="0" minWidth="14" top="0" bottom="0" minHeight="14">
        <s:stroke>
            <s:SolidColorStroke color="0x686868" weight="1"/>
        </s:stroke>
        <s:fill>
            <s:SolidColor color="0xF9F9F9" color.down="0xDEEBFF" />
        </s:fill>
    </s:Rect>
    
    <!-- fill -->
    <s:Rect left="1" right="1" top="1" bottom="1">
        <s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xEAEAEA" 
					color.over="0xFAFAFA"
					color.down="0xD7D7D7"
					alpha="0.85" 
					alpha.down="1" />
				<s:GradientEntry color="0xC0C0C0" 
					color.over="0xD0D0D0"
					color.down="0xEAEAEA"
					alpha="0.85" 
					alpha.down="1" />
			</s:LinearGradient>
        </s:fill>
    </s:Rect>
    
    <!-- arrow -->
    <!--- Defines the appearance of the left arrow in the ScrollBar component. -->
	<s:Path id="arrow" horizontalCenter="0" verticalCenter="0"
		data="M0 6 0 0 4 3 0 6">
		<s:fill>
			<s:SolidColor id="arrowFill" color="0"/>
		</s:fill>
	</s:Path>
</s:SparkSkin>
